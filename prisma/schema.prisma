// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  columns     Column[]
  cards       Card[]
  comments    Comment[]
  activities  Activity[]

  @@index([email])
}

model Column {
  id         String   @id @default(cuid())
  title      String
  order      Int
  isArchived Boolean  @default(false)
  userId     String?
  user       User?    @relation(fields: [userId], references: [id])
  cards      Card[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([order])
  @@index([isArchived])
  @@index([userId])
}

model Card {
  id          String       @id @default(cuid())
  columnId    String
  column      Column       @relation(fields: [columnId], references: [id], onDelete: Cascade)
  title       String
  description String?
  order       Int
  isArchived  Boolean      @default(false)
  dueDate     DateTime?
  labels      String[]     @default([])
  coverImage  String?
  userId      String?
  user        User?        @relation(fields: [userId], references: [id])
  comments    Comment[]
  activities  Activity[]
  attachments Attachment[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([columnId])
  @@index([order])
  @@index([isArchived])
  @@index([dueDate])
  @@index([userId])
}

model Comment {
  id        String   @id @default(cuid())
  cardId    String
  card      Card     @relation(fields: [cardId], references: [id], onDelete: Cascade)
  text      String
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())

  @@index([cardId])
  @@index([userId])
}

model Activity {
  id        String   @id @default(cuid())
  cardId    String
  card      Card     @relation(fields: [cardId], references: [id], onDelete: Cascade)
  message   String
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())

  @@index([cardId])
  @@index([createdAt])
  @@index([userId])
}

model Attachment {
  id        String   @id @default(cuid())
  cardId    String
  card      Card     @relation(fields: [cardId], references: [id], onDelete: Cascade)
  filename  String
  url       String
  size      Int
  mimeType  String
  note      String?
  createdAt DateTime @default(now())

  @@index([cardId])
}
